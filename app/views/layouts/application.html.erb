<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>

  <body>

    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <h2>Bookers</h2>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
           <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
                <li class="">
                  <%= link_to ' Home', user_path(current_user.id), class:"glyphicon glyphicon-home home" %>
                </li>
                <li class="">
                  <%= link_to ' Users', users_path, class:"glyphicon glyphicon-user users" %>
                </li>
                <li class="">
                  <%= link_to ' Books', books_path, class:"glyphicon glyphicon-book books" %>
                </li>
                <li class="">
                  <%= link_to " logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout" %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to " Home", root_path, class:"glyphicon glyphicon-home home" %>
                </li>
                <li class="">
                  <%= link_to " About", about_path, class:"glyphicon glyphicon-home home" %>
                </li>
                <li class="">
                  <%= link_to " sign up", new_user_registration_path, class:"glyphicon glyphicon-edit sign_up" %>
                </li>
                <li class="">
                  <%= link_to " login", new_user_session_path, class:"glyphicon glyphicon-log-in login" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

    <%= yield %>

   <footer class="footer style-2">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="col">
              <br>
              <p class="no-margin" style="font-size: 11px;">
              <br>
              </p>
            </div>
          </div>
          <div class="col-md-2">
            <div class="col">
              <h4></h4>
            </div>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
