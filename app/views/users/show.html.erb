<div class ="container">
	<div class="row">
		<%= render 'users/user', user: @user, book: @book %>
		<p id="notice"><%= notice %></p>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
				<% @books.each do |book| %>
					<tr>
						<th><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></th>
						<th><%= link_to book.title, book_path(book.id),class:"" %></th>
						<th><%= book.body %></th>
						<% if @book.user == current_user %>
						<th><%= link_to "edit", edit_user_path(@user.id),class:"btn btn-success" %></th>
						<th><button class="btn btn-danger"><%= link_to "destroy", book_path(book.id), method: :delete %></button></th>
						<% end %>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>