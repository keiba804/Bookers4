<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
	<table class="table">
		<tbody>
			<tr></tr>
			<th>
				<tr>name</tr>
				<tr><%= @user.name %></tr>
			</th>
			<th>
				<tr>introduction</tr>
				<tr><%= @user.introduce %></tr>
			</th>
		</tbody>
	</table>
	<% if @user.id == current_user.id %>
		<div class="row">
			<button type="button" class="btn btn-default" aria-label="center"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
		</div>
	<% end %>
	<h2>New book</h2>
	<%= form_for(@book) do |f| %>
		<label>Title</label>
		<%= f.text_field :title %>
		<label>Opinion</label>
		<%= f.text_field:body %>
		<%= f.submit '投稿' %>
	<%= end %>
