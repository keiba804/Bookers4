<div class ="container">
	<div class="row">
		<% if @book.errors.any? %>
	    	<div class="alert">
			    <ul>
			      <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
			      <% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
	  		</div>
		<% end %>
		<%= render 'users/user', user: @user, book: @book %>
		<div class="col-xs-9">
			<h2>Books</h2>

			<table class="table table-hover table-inverse">
				<thead>
					<th>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</th>
				</thead>
				<% @books.each do |book| %>
					<tr>
						<th>
							<%= link_to user_path(book.user_id) do %>
		                    	<%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
                    		<% end %>
                    	</th>
						<th><%= link_to book_path(book.id) do %><%= book.title %><% end %></th>
						<th><%= book.body %></th>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
