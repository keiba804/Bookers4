<div class="container">
    <div class="row">
    	<div class="form-user style-1 rounded has-shadow-1">
                <div class="">
                    <h1>Editing Book</h1>
                </div>
		<% if @book.errors.any? %>
	    	<div class="alert">
			    <ul>
			      <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
			      <% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
	  		</div>
		<% end %>
				<!-- form_for部分 -->
				<div class="form-body">
					<%= form_for(@book) do |f| %>
					    <h4>title</h4>
					    <%= f.text_field :title %>
					    <h4>body</h4>
					    <%= f.text_area :body %>
					    <%= f.submit 'Update Book' %>
					<% end %>
				</div>

				<p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
		</div>
	</div>
</div>