<div class ="container">

	<div class="row">
		<%= render 'users/user', user: @book.user, book: @newbook %>
		<p id="notice"><%= notice %></p>
		<% if @book.errors.any? %>
		    <div class="alert">
				<ul>
				  <% @book.errors.full_messages.each do |message| %>
				    <li><%= message %></li>
				  <% end %>
				</ul>
		  	</div>
		<% end %>

		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<th>
						<tr>
							<th></th>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</th>
				</thead>
				<tr>
					<th>
						<%= link_to user_path(@book.user_id) do %>
		                    	<%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %><br><%= @book.user.name %>
                    		<% end %>
                    </th>
					<th><p><%= @book.title %></p></th>
					<th><p><%= @book.body %></p></th>
					<th>
						<% if @book.user == current_user %>
	  						<p><%= link_to"Edit", edit_book_path(@book.id) %></p>
	  					<% end %>
					</th>
					<th>
						<% if @book.user == current_user %>
	  						<p><%= link_to"Destroy", book_path(@book.id), method: :delete %></p>
	  					<% end %>
					</th>
				</tr>
			</table>
		</div>
	</div>
</div>
